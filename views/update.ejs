<%- include("./partials/header") %>


  
<h1 class="Heading text-center">Book Store Entry</h1>

<form class="container bg-secondary-subtle  mt-2 p-2 bg-light" action="/update/<%= index %>" method="post">
  <input class="form-control" type="text" placeholder="Book Name" name="book" value="<%= book_data.book %>"> <br>
  <input class="form-control" type="text" placeholder="Author Name" name="author" value="<%= book_data.author%>"  > <br>
  <input class="form-control" type="text" placeholder="Book Price" name="price" value="<%=book_data.price%>" > <br>
  <input class="form-control" type="text" placeholder="Book Quantity" name="qua" value="<%= book_data.qua %>" > <br>
  <input class="form-control" type="text" placeholder="Book Language" name="lan" value="<%= book_data.lan %>"> <br>
  <input class="form-control" type="text" placeholder="Book Category" name="cat" value="<%= book_data.cat %>"> <br>
  <textarea class="form-control" name="description"  placeholder="Enter Text here" cols="50" rows="4">
    <%= book_data.description%>
  </textarea>
  <button class="btn btn-primary m-3">Update Book</button>
</form>


  <%- include("./partials/footer") %>